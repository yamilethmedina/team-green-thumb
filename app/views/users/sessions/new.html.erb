<h3>LOG IN TO PLAY AN ACTIVITY</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="border-form-div col-md-4 col-md-offset-4">
  <div class="field">
   
    <%= f.email_field :email, autofocus: true, placeholder: 'PARENT EMAIL', class: "form-control input-lg" %>
  </div>

  <div class="field">
     <%= f.password_field :password, autocomplete: "off", placeholder: "PASSWORD", class: "form-control input-lg" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me, placeholder: "PASSWORD", class: "checkbox" %><br />
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions"><br/>
    <%= f.submit "LET'S GO!", class: "btn btn-default btn-block" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
