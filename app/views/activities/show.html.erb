<p id="notice"> <%= notice %> </p>

<div class="col-md-4 col-md-offset-4 text-center">

  <%= image_tag 'flower activity icon.svg', height: '300px' %>

<h3 title=""><%= @activity.title %></h3>


  <p>
    <span class="glyphicon glyphicon-time"></span>
    <%= @activity.minutes %> minutes</p>

<p><%= @activity.description.html_safe %></p>

<!--kids submit image, post to correct route -->

<%= form_for @activity, url: {:action => 'submission'},
             multipart: true, method: :post,
             html: {class: "form-inline center"} do |f| %>

    <div class="fileUpload btn btn-teal btn-block btn-lg">
      <%= f.file_field :submission, class:'upload', accept: "image/*;capture=camera" %>
      <span class="glyphicon glyphicon-camera"></span> Take Photo
    </div>

    <%= f.submit class:'btn btn-block btn-lg btn-orange'%>



<% end %>



</div>